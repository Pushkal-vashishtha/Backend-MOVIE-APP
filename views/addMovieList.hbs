<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Movie List</title>
</head>

<body>
    <div class="container">
        <h1>List of Movies</h1>

        <form class="search-container" action="/fetch-movie" method="post">
            <input type="text" id="searchTerm" name="searchTerm" placeholder="Movie Name or ID" required>
            <button class="submit-btn" type="submit">Fetch Details</button>
        </form>

        {{#each movieList}}
        <div class="movieDetailsContainer">
            <div class="posterContainer">
                <img src="https://image.tmdb.org/t/p/original/{{this.poster_path}}" alt="Movie Poster">
            </div>

            <div class="detailsTextContainer">
                <a href="/addMovie/{{this.id}}">
                    <h2>{{this.title}}</h2>
                </a>
                <p>{{this.overview}}</p>
                <p class="release-date">Release Date: {{this.release_date}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</body>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');

    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f0f2f5;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #4CAF50;
        margin-bottom: 20px;
    }

    .search-container {
        display: flex;
        justify-content: center;
        margin-bottom: 20px;
    }

    .search-container input {
        margin-right: 10px;
        padding: 10px;
        width: 250px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .submit-btn {
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .submit-btn:hover {
        background-color: #45a049;
        transform: scale(1.05);
    }

    .movieDetailsContainer {
        display: flex;
        align-items: flex-start;
        padding: 20px;
        margin: 20px 0;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .movieDetailsContainer:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .posterContainer img {
        width: 100px;
        height: auto;
        border-radius: 5px;
    }

    .detailsTextContainer {
        margin-left: 20px;
    }

    .detailsTextContainer h2 {
        margin: 0 0 10px;
        font-size: 1.5em;
        color: #333;
    }

    .detailsTextContainer p {
        margin: 5px 0;
        font-size: 1em;
        line-height: 1.4;
    }

    .detailsTextContainer .release-date {
        font-weight: bold;
        color: #555;
    }

    a {
        text-decoration: none;
        color: #4CAF50;
        transition: color 0.3s ease;
    }

    a:hover {
        color: #45a049;
    }
</style>

</html>
